<!-- MAIN CONTENT AND INJECTED VIEWS -->
<div id="main" class="container container-sml" ng-controller="shopController">

    <div class="view-slide-in">
        <div>
            <h1 class="text-center">Online Shop</h1>
            <hr class="hr--small">
            <div class="content">

                {{#each products}}
                    <div class="product">
                        <div class="row">
                            <div class="col-md-8">
                                <h1><a href="/product/{{ this.slug }}">{{ this.title }}</a></h1>
                                <p class="author">by <a target="_self" href="/pages/about-me">{{ this.author }}</a>&nbsp;&nbsp;&nbsp;&nbsp;{{ this.publishDate }}</p>
                                <p class="readMore">{{ this.readMore }}... <br/><a href="/product/{{ this.slug }}">Read More</a></p>
                            </div>

                            <div class="col-md-4">
                                <a href="/product/{{ this.slug }}">
                                <img class="featuredImage" src="{{ this.featuredImage }}" width="100%" />
                                </a>
                            </div>

                        </div>
                    </div>
                {{/each}}

            </div>
        </div>
    </div>

</div>


