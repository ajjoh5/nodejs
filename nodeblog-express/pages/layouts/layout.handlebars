    <link href="/js/froala-editor/css/froala_editor.min.css" rel="stylesheet" type="text/css" />
    <!--<link href="/js/froala-editor/css/froala_style.min.css" rel="stylesheet" type="text/css" />-->
    <!-- Basic formatting for image, video, table, code and quote. -->
    <link href="/js/froala-editor/css/froala_content.min.css" rel="stylesheet" type="text/css" />
