    <!-- Page Animations -->
    <!--<script src="/js/anim/page-animations.js"></script>-->

    <!-- add jasny bootstrap -->
    <link rel="stylesheet" href="/js/jasnybs/jasny-bootstrap.min.css">
    <script src="/js/jasnybs/jasny-bootstrap.min.js"></script>

    <!-- HEADER - Custom Scripts -->
    {{{ block "header-scripts" }}}
</head>
<body ng-app="app">

<header>
    <div class="edit-menu{{#if isEditModeOn}} edit-mode{{/if}}">
        <a href="javascript:void(0)" data-toggle="offcanvas" data-target="#cmsMenu" data-canvas="body">
            <img src="/css/images/menu-bars.svg" />
        </a>
    </div>
    <nav id="cmsMenu" class="navmenu navmenu-fixed-left offcanvas" role="navigation">
        <div class="nav-logo text-center">
            NodeJS CMS
        </div>
        <ul class="nav navmenu-nav">
            {{#if isEditModeOn}}
                <li><a href="../{{ view }}"><i class="fa fa-eye fa-lg"></i>&nbsp;View Page</a></li>
                <li><a href="javascript:void(0)" onclick="SavePage()"><i class="fa fa-floppy-o fa-lg"></i>&nbsp;Save Page</a></li>
            {{/if}}
            {{#unless isEditModeOn}}
                <li><a href="{{ view }}/edit"><i class="fa fa-pencil-square-o fa-lg"></i>&nbsp;Edit Page</a></li>
            {{/unless}}
        </ul>
    </nav>
    <nav class="navbar navbar-default navbar-fixed-top navbar-minimal">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Adam Johnstone</a>
            </div>

            <ul class="nav navbar-nav navbar-right navbar-collapse collapse">
                <li><a href="/pages/about-me"><i class="fa fa-child"></i>&nbsp;About Me</a></li>
                <li><a href="/blog"><i class="fa fa-comments-o"></i>&nbsp;Blog</a></li>
                <li><a href="/shop"><i class="fa fa-shopping-cart"></i>&nbsp;Shop</a></li>
                <li><a href="/pages/contact-me"><i class="fa fa-envelope-o"></i>&nbsp;Contact</a></li>
            </ul>
        </div>
    </nav>
</header>

{{{ body }}}

<!-- LOAD - Custom Scripts -->
{{#block "footer-scripts"}}
{{/block}}
<!-- END - Custom Scripts -->

<script>
    $(document).ready(function() {
        $('div.spa-editor').editable({
            inlineMode: true,
            countCharacters: false
        })
    });

    function SavePage(action)
    {
        var pageContent = {
            content : []
        };

        $('div.spa-editor').each(function() {
            var contentName = $(this).attr('data-name');
            var contentHTML = $(this).editable('getHTML', false, false);
            var contentNode = {
                name : contentName,
                content : contentHTML
            };

            pageContent.content.push(contentNode);
        });

        $.post('./save/', pageContent, function(data, status) {
            if(status !== 'success')
            {
                alert(data);
            }

            $("#cmsMenu").offcanvas('hide');

            if(action.toUpperCase() === 'VIEW')
            {
                window.location = '../{{ view }}';
            }
        });
    }
</script>

</body>
</html>