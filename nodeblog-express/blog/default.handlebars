<!-- MAIN CONTENT AND INJECTED VIEWS -->
<div id="main" class="container container-sml">

    <div class="view-slide-in">
        <div>
            <h1 class="text-center">Blog</h1>
            <hr class="hr--small">
            <div class="content">

                {{#each blog}}
                    <div class="blog-article">
                        <div class="row">
                            <div class="col-md-8">
                                <h1><a href="/blog/{{ this.url }}">{{ this.blog-title }}</a></h1>
                                <p class="author">by <a target="_self" href="/pages/about-me">{{ this.author }}</a>&nbsp;&nbsp;&nbsp;&nbsp;{{ this.publish-date }}</p>
                                <p class="readMore">{{ this.more-text }}... <br/><a href="/blog/{{ this.url }}">Read More</a></p>
                            </div>

                            <div class="col-md-4">
                                <a href="/blog/{{ this.url }}">
                                    <img class="featuredImage" src="{{ this.featured-image }}" width="100%" />
                                </a>
                            </div>

                        </div>
                    </div>
                {{/each}}

